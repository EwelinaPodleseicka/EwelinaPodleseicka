//package lab06;
public class Punkt {
    public double x,y; //2
    //3

    public Punkt(){
        this.x=0.0;
        this.y-0.0;
    }
    //4

    public Punkt(double x, double y) {
        this.x = x;
        this.y = y;
    }

    //5

    public double getX() {
        return x;
    }

    public void setX(double x) {
        this.x = x;
    }

    public double getY() {
        return y;
    }

    public void setY(double y) {
        this.y = y;
    }

    public void zeruj() {x=0.0; y=0.0;}

    public void opis(){
        System.out.println("PKT. o wsp.[x,y] = " +x+" ," +y+;
    }
    public void przesun(double x, double y){
        this.x+=x;
        this.y+=y;
    }

}



class Figura {

    //pola metody i kontruktory
    Punkt punkt;
    String kolor = "bialy";


    Figura(){
        punkt = new Punkt(0,0);
    }
    Figura(String kolor){
        this.kolor=kolor;
    }
    Figura(Punkt punkt){
        this.punkt=punkt;
    }
    String getKolor(){
        return kolor;
    }
    String opis(){
        return "Klasa Figura. Kolor obiektu: "+kolor;
    }


}



//package lab06;
class Prostokat  {
    double wys=0, szer=0;

    Prostokat(double wys,double szer){
        this.wys = wys;
        this.szer = szer;

    }

    double getPowierzchnia() {
        return (szer * wys);
    }


}



class Trojkat
{
    double wys=0, podst=0;

    Trojkat(double wys, double podst)
    {
        this.wys = wys;
        this.podst = podst;
    }

}

